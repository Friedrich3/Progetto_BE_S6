 @using System.Security.Claims;
@{
	ViewData["Title"] = "Pagina Dipendente";
}


<div class="container">
	<div class="row mb-2">
		<h2>Benvenuto @User.FindFirst(ClaimTypes.GivenName).Value</h2>
	</div>

	<div class=" row mb-2">
	@if (User.IsInRole("Admin"))
	{
		<div class="row">
			<div class="card p-0">
				<div class="card-header">
					Admin Privilege-only
				</div>
				<div class="card-body">
					<h5 class="card-title">Inserimento nuovo Dipendente</h5>
					<p class="card-text">in questa sezione potrai creare ed aggiungere un nuovo dipendente</p>
					<a asp-action="Register" asp-controller="Account" class="btn btn-primary">Vai alla Registrazione</a>
				</div>
			</div>
		</div>
	}
	</div>

	<div class=" row mb-2">
		@if (User.IsInRole("Admin"))
		{
			<div class="row">
				<div class="card p-0">
					<div class="card-header">
						Admin Privilege-only
					</div>
					<div class="card-body">
						<h5 class="card-title">Gestione Camere</h5>
						<p class="card-text">in questa sezione potrai creare ed aggiungere le nuove camere disponibi nel tuo hotel</p>
						<a asp-action="Index" asp-controller="Camera" class="btn btn-primary">Vai alle Camere</a>
					</div>
				</div>

			</div>
		}
	</div>

	<div class=" row mb-2">
		@if (User.IsInRole("Supervisor") || User.IsInRole("Admin"))
		{
			<div class="row">
				<div class="card p-0">
					<div class="card-header">
						SuperVisor Privilege-only
					</div>
					<div class="card-body">
						<h5 class="card-title">Gestione prenotazioni</h5>
						<p class="card-text">in questa sezione potrai creare ed aggiungere delle nuove Prenotazioni</p>
						<a asp-action="AddPrenotazione" asp-controller="Prenotazione" class="btn btn-primary">Vai alla Prenotazione</a>
					</div>
				</div>

			</div>
		}
	</div>
	<div class="row mb-2">
		@if (User.Identity.IsAuthenticated)
		{
			<div class="row">
				<div class="card p-0">
					<div class="card-header">
						Vista prenotazioni
					</div>
					<div class="card-body">
						<h5 class="card-title">Visualizza Prenotazioni</h5>
						<p class="card-text">in questa sezione potrai visualizzare le prenotazioni attive</p>
						<a asp-action="Index" asp-controller="Prenotazione" class="btn btn-primary">Vai alle Prenotazioni</a>
					</div>
				</div>

			</div>
		}
	</div>
</div>
