@model List<Camera>
@{
    ViewData["Title"] = "Camera HomePage";
}

<div class="container">
	<div class="text-center">
		<h2 class="display-4">Gestione Camere</h2>
	</div>
	<div class="row mb-3">
		<h3 class="col-10 m-0">Le nostre camere disponibili:</h3>
		<a class="btn btn-success ms-auto col-2" asp-controller="Camera" asp-action="AddCamera">Nuova Camera</a>
	</div>
	<div class="d-flex">
	</div>
	<div class="row">
			@foreach (var camera in Model)
			{
				<div class="col-3 mb-2">
					<div class="card">
						<div class="card-body d-flex justify-content-between">
							<div>
								<h3 class="card-title fw-bold">@camera.Numero</h3>

							</div>
							<div class="text-end">
								<h5 class="card-subtitle mb-2 fw-bold text-body-secondary">@camera.Tipo</h5>
								<h5 class="card-text">@camera.Prezzo €</h5>

							</div>
						</div>
					</div>
				</div>
			}
	</div>
</div>



