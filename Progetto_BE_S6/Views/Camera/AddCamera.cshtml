@model AddCameraViewModel
@{
	ViewData["Title"] = "Camera AddNew";
	var ArrTipi = ViewBag.TipiCamera as string[];
}

<div class="container">
<div class="row">
	<h3 class="text-center">Nuova Camera</h3>
</div>

	@if (TempData["Error"] != null)
	{

		<div class="row">
			<div class="alert alert-danger" role="alert">
				@TempData["Error"]
			</div>
		</div>
	}

	<div class="row">
		<div class=" col-4"></div>
		<div class=" col-4 mt-5 border border-2  shadow-lg">
			<form class="row g-3 py-3" method="post" asp-controller="Camera" asp-action="AddSave">
				<div class="col-md-4 mb-3">
					<label for="numeroCamera" class="form-label fw-bold text-secondary">Numero Camera</label>
					<input type="text" class="form-control" id="numeroCamera" asp-for="@Model.Numero" placeholder="101..." required>
				</div>
				<div class="col-md-8 mb-3">

					<label for="tipoCamera" class="form-label fw-bold text-secondary fw-bold text-secondary">Numero Camera</label>
				<select class="form-select" id="tipoCamera" asp-for="@Model.Tipo" required>
					<option selected>Seleziona un Tipo di camera</option>
					@foreach(var tipo in ArrTipi){
						<option value=@tipo >@tipo</option>
					}
				</select>
				</div>
				<div class="col-md-6 mb-3">
					<label for="numeroCamera" class="form-label fw-bold text-secondary">Prezzo camera</label>
					<input type="number" step="0.01" min="0" class="form-control" id="numeroCamera" asp-for="@Model.Prezzo" placeholder="110.00" required>
				</div>
				<div class="col-md-12 mb-3">
				<div class="form-check">
					<input class="form-check-input" type="checkbox" asp-for="@Model.IsDisponibile" id="cameraCheck">
					<label class="form-check-label fw-bold text-secondary" for="cameraCheck">
						E' gia' disponibile la camera?
					</label>
				</div>
				</div>

				<div class="col-12 text-center">
					<button type="submit" class="btn btn-success">Aggiungi!</button>
				</div>
			</form>
		</div>
		<div class=" col-4"></div>
	</div>
</div> 